// Quotes
// Rode spraakballon
blockquote.newQuote
    float right
    position relative
    height 169px
    width 300px
    padding 20px
    margin 0 40px
    border 0
    color #fff
    background rood
    border-radius(10px)
    > p
        font-style italic
        color wit
        font-weight 700
        font-family sans
        font-size 20px
        padding 10px
        margin auto
    &:after
        content ""
        position absolute
        bottom -30px
        left 50px
        border-width 0 20px 30px 0px
        border-style solid
        border-color transparent rood
        /* reduce the damage in FF3.0 */
        display block
        width 0
blockquote.BallonQuote
    float right
    position relative
    background image('bg_quote.png') no-repeat center center
    height 169px
    width 300px
    padding 20px
    margin 0 40px
    border 0
    > p
        color wit
        font-weight 700
        font-style italic
        font-family sans
        font-size 20px
        padding 25px 40px 30px 35px
        margin auto
        &:before
            content "\201C"
            position absolute
            z-index 1
            top 20px
            left 20px
            font 80px/1 Georgia, serif
            color wit
        &:after
            content "\201D"
            position absolute
            z-index 1
            bottom 20px
            right 30px
            font 80px/0.25 Georgia, serif
            color wit

