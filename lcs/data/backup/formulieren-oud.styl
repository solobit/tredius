// Hoofd foutmelding bubbel/ballon
::-webkit-validation-bubble {
    -webkit-animation-timing-function ease
    -webkit-animation bounce 0.45s 1
    margin-left -15px
    opacity 0.9
}

// Berichtenvak
::-webkit-validation-bubble-message {
    color wit
    font 16px sans
    top -7px
    min-width 50px
    max-width 300px
    background-color rood
    border 1px solid #9f1300
    padding 6px 10px 7px 10px
    text-shadow #901100 0 -1px 0
    background-image -webkit-linear-gradient(rood 43%, #ba1600 100%)
    box-shadow rgba(0, 0, 0, 0.65) 0 2px 7px, inset rgba(255, 60, 60, 1) 0 1px 0px;
    -webkit-font-smoothing antialiased
    -webkit-border-radius 6px
}

// De pijl
::-webkit-validation-bubble-arrow {
    width 12px
    height 12px
    left 20px
    background-color rood
    border 1px solid #9f1300
    border-right none
    border-bottom none
    display inline-block
    position relative
    -webkit-box-shadow none
    -webkit-transform-origin: 0 0
    -webkit-transform rotate(45deg)
}

::-webkit-validation-bubble-text-block {
    //?
}

::-webkit-validation-bubble-body {
    color wit
    font 16px sans
}

// De kop van de pijl
::-webkit-validation-bubble-arrow-heading {
    //...
}

// Knipt pijl weg zodat deze niet voor het bericht komt
::-webkit-validation-bubble-arrow-clipper {
    display block
    height 16px
    overflow hidden
}

// Foutmeldingsicoon
::-webkit-validation-bubble-icon {
    //display none
    background: url('/media/afbeeldingen/error.png');

}


// Effecten
// --------------------------
@-webkit-keyframes bounce {
    0% {
        opacity: 0.5;
        margin-left: 85px;
    }

    25% {
        margin-left: -35px;
    }

    50% {
        margin-left: 50px;
    }

    75% {
        margin-left: -22px;
    }

    100% {
        margin-left: -15px;
        opacity: 0.9;
    }
}


// Kill me those two won't mix?!

textarea
    font 16px sans
    font-style italic
    border-radius(4px)
    border 1px solid #ccc
    box-shadow inset 0 0 10px rgba(0,0,0,.06)
    padding 10px
    margin 0



input[type="checkbox"]

    border-radius(3px)
    border 1px solid #cacece
    box-shadow 0 0 3px 0 grijs
    background wit
    margin-left -1px
    padding 11px
    display inline-block
    position relative
    vertical-align middle
    &:active,
    &:checked:active
        box-shadow 0 0 3px 0 grijs
    &:checked
        border 1px solid #cbcbcb
        box-shadow 0 0 3px 0 grijs
        color #99a1a7
    &:checked:after
        content '\2714'
        font-size 20px
        position absolute
        top -1px
        left 3px
        color #403e6b

input[type="radio"]
    -webkit-appearance none
    background-color #fafafa
    border 1px solid #cacece
    box-shadow 0 1px 2px rgba(0,0,0,0.05), inset 0 -15px 10px -12px rgba(0,0,0,0.05)
    padding 9px
    border-radius 50px
    display inline-block
    position relative
    &:checked
        background-color #e9ecee
        color #99a1a7
        border 1px solid #adb8c0
        box-shadow 0 1px 2px rgba(0,0,0,0.05), inset 0 -15px 10px -12px rgba(0,0,0,0.05), inset 15px 10px -12px rgba(255,255,255,0.1), inset 0 0 10px rgba(0,0,0,0.1)
    &:after
        content ' '
        width 12px
        height 12px
        border-radius 50px
        position absolute
        top 3px
        background #99a1a7
        box-shadow inset 0 0 10px rgba(0,0,0,0.3)
        text-shadow 0
        left 3px
        font-size 32px
    &:active,
    &:checked:active
        box-shadow 0 1px 2px rgba(0,0,0,0.05), inset 0 1px 3px rgba(0,0,0,0.1)


