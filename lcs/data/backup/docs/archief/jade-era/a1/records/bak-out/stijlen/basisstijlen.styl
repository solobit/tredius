// Centreren van inhoud
midden()
  width 940px
  margin 0 auto

// Rij 100% breedte
band()
  width 100%
  background transparent
  margin 0
  padding 0
  display block
  float none

// In rood afgevinkte lijstonderdelen
afvinken()
  margin-top 30px
  line-height 30px
  font middel sans
  > li
    font-size 16px
    list-style-image url('/media/afbeeldingen/arrow.png')
    list-style-position outside
    margin-left 60px
    margin-bottom 20px

.afgevinkt
  afvinken()


