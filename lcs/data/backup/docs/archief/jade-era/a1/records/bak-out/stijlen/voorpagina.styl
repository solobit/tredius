// Voorpagina

// Knop LEES ONZE OVERTUIGING
a.verder
  @extends a.knop
  position relative
  display inline-block
  background-color rood
  margin 0 auto
  padding 10px 24px
  &:hover
    background-color bruinig

// Standaard opmaak
.inhoud
  kolom(12)
  midden()
  display block
  float none
  padding-top 50px
  padding-bottom 30px

  // Artikel koppen

  > h1
    // Zonder nadruk (grijze lijn)
    color bruin
    font 30px sans
    font-weight 600
    font-style italic
    text-align center

  > h2
    // Kleurvariaties
    font flink sans
    color bruin
    text-align center
    font-weight 400
    line-height 30px
    margin 30px 0

  > p
    // Expliciet nogmaals para
    color zwart
    line-height 24px

    a
      // Link inline
      color rood
      text-decoration none
      &:hover
        text-decoration underline

    figure > figcaption
      // Iconen ter illustratie artikelen
      margin-bottom 50px
      text-transform uppercase

