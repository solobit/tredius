

// Element rules (some safe, better resets)

div, article, section, form
    margin 0
    padding 0
a:link, a:visited, a:active
    color rood
    text-decoration none
    text-transform uppercase
    &:hover
        text-decoration underline

input
    &[type="submit"],
    &[type="reset"],
    &[type="email"],
    &[type="text"],
    &[type="tel"],
    &[type="password"]

        border-radius(4px)
        font 16px sans
        border 1px solid #ccc
        padding 5px 10px
        position relative
        box-shadow inset 0 0 10px rgba(0,0,0,.06)
    &:focus
        font-style normal



p, span
    font 16px sans
    color zwart
p
    padding 10px 0
    line-height 1.4em
strong, b
    font-weight 600
    font-size 16px
