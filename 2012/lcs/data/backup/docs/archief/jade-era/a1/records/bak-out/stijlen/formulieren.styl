// Kill me those two won't mix?!

textarea
  font 16px sans
  font-style italic
  border-radius(4px)
  border 1px solid #ccc
  box-shadow inset 0 0 10px rgba(0,0,0,.06)
  padding 10px
  margin 0

input
  &[type="email"]
  &[type="text"]
  &[type="tel"]
  &[type="password"]
    font 16px sans
    border 1px solid #ccc
    padding 5px 10px
    position relative
    border-radius(4px)
    box-shadow inset 0 0 10px rgba(0,0,0,.06)
    z-index 2
    &:focus
      font-style normal


