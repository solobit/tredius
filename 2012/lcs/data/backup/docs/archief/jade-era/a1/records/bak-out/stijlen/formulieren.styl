  display inline
  > input[type=file]
    position absolute
    left 0
    margin-top -5px
    opacity 0
    z-index 1
    cursor pointer
    width 200
    height 50
  > input[type=text]
    position absolute
    display inline-block
    left 0
    margin-top -5px
    top 0
    z-index -1
    width 200
    height 50

