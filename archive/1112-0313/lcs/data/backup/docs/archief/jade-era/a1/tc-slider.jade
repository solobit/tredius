
section.ttColumnSlider-sectie

  h1 Columns van Marco Krijger

  section#ib-container.ib-container

    each column in getCollection("columns").toJSON()

        article

          a(href='#{column.url}')

            header

              img(src='/media/afbeeldingen/icon_column.png', alt='Column #{column.titel}')

              h3 #{column.subtitel}

              span #{column.datum}

            p #{column.samenvatting}


:coffeescript

  $ ->

    $container = $("#ib-container")
    $articles = $container.children("article")
    timeout = undefined

    $articles.on "mouseenter", (event) ->
      $article = $(this)
      clearTimeout timeout
      timeout = setTimeout(->
        return false  if $article.hasClass("active")
        $articles.not($article.removeClass("blur").addClass("active")).removeClass("active").addClass "blur"
      , 65)

    $container.on "mouseleave", (event) ->
      clearTimeout timeout
      $articles.removeClass "active blur"
      console.log 'test'



