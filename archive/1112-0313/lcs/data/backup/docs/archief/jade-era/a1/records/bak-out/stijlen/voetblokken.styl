// Responsive wrapper
.afspelen
  position relative
  // Handhaaft aspect ratio 16:9
  padding-bottom 56.25%
  padding-top 25px
  height 0
  margin-bottom 50px
  > iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%



// Eerste voetblok
#snelkoppelingen
  midden()
  > section
    kolom(4)
    margin-top 25px
    margin-bottom 25px
    min-height 250px
  h4
    font normaal sans
    text-align left
    font-weight 600
    color #363636
    margin-bottom 5px
  li
    font-size 14px
    line-height 22px
    &:before
      content "Â» "
      color rood
    > a
      font-size 14px
      color zwart
      text-decoration none
      &:hover
        text-decoration underline

// Onderste voetblok
#paginavoet
  midden()
  font klein sans
  // auteursrecht
  > aside
    kolom(6)
    text-align left
    > ul
      // algemene bepalingen
      list-style none
      cursor pointer
      text-align right
      > li
        display inline-block
        > a
          font klein sans
          color zwart
          text-decoration none
          line-height 1.8em
          &:hover
            text-decoration underline


