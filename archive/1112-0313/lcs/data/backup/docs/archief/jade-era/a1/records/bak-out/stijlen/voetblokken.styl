// Multimedia grijze blok
#multimedia
  midden()
  > aside
    &.video
      kolom(4)
    &.nieuwsbrief
      kolom(4)
      > h3
        font 24px dosis
        font-weight 500
        color rood
      input[type=email]
        width 300
        margin-bottom 20px
      > p
        margin-top 10px
        font-size 14px
      span
        font 10px sans
        color rood



